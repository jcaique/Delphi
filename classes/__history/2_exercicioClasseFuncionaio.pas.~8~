unit classeFuncionario;

interface

type
  TFuncionario = class(Tobject)

  private
    FNome: String;
    FIdade: Integer;
    FSalario: Double;

  public
    function getNome: String;
    function getIdade: Integer;
    function getSalario: Double;
    procedure setNome(nome: String);
    procedure setIdade(idade: Integer);
    procedure setSalario(salario: Double);

    //implementar properties
  end;

implementation

function TFuncionario.getNome(): String;
begin
  Result := FNome;
end;

function TFuncionario.getIdade():Double;
begin
  Result := FIdade;
end;
end.
